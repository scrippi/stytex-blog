<%= form_for @comment, :html => { :class => "form-horizontal comment" } do |f| %>

    <% if @comment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :content, :class => 'form-control' %>
    </div>
    <%= error_span(@comment[:content]) %>
  </div>
  <div class="control-group">
    <%= f.label :permitted, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :permitted, :class => 'form-control' %>
    </div>
    <%= error_span(@comment[:permitted]) %>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@comment[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :author_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :author_name, :class => 'form-control' %>
    </div>
    <%= error_span(@comment[:author_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :author_email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :author_email, :class => 'form-control' %>
    </div>
    <%= error_span(@comment[:author_email]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            comments_path, :class => 'btn btn-default' %>

<% end %>
