<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% @posts.each do |post| %>
    <div class="row">
      <article class="col-12-xs">
          <h2>
            <%= link_to post.subject, "blog/#{post.seo_name}" %>
            <% unless post.published %>
                <span class="label label-default">not published</span>
            <% end %>
          </h2>

          <%= post.content.gsub("\r\n", "<br>").html_safe %>
          <div class="post-short-footer">
            <p class="pull-left">
              <i class="fa fa-calendar"></i> <%= post.get_date.strftime "%d.%h %Y %H:%M:%S" %>
            </p>
            <p class="pull-right">
              <i class="fa fa-comment"></i> Comment
            </p>
          </div>
      </article>
    </div>
<% end %>

<% if user_signed_in? %>

    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %>
<% end %>